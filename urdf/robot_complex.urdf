<?xml version="1.0"?>
<robot name="simple_robot">
  <link name="base">
    <visual>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>
  <!-- Definition of the first wheel -->
  <link name="wheel_1">
    <visual>
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint connecting the first wheel to the base -->
  <joint name="joint_wheel_1" type="continuous">
    <parent link="base"/>
    <child link="wheel_1"/>
    <origin xyz="0.5 -0.5 -0.5" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
</robot>
