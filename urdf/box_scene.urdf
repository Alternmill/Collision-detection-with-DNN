<?xml version="1.0"?>
<robot name="plane_scene">
  <!-- Common invisible root link -->
  <link name="root_link"/>

  <!-- Front Wall -->
  <link name="front_wall">
    <visual>
      <geometry>
        <box size="6.1 0.1 2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="6.1 0.1 2"/>
      </geometry>
    </collision>
  </link>

  <!-- Back Wall -->
  <link name="back_wall">
    <visual>
      <geometry>
        <box size="6.1 0.1 2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="6.1 0.1 2"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wall -->
  <link name="left_wall">
    <visual>
      <geometry>
        <box size="0.1 6.1 2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 6.1 2"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wall -->
  <link name="right_wall">
    <visual>
      <geometry>
        <box size="0.1 6.1 2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 6.1 2"/>
      </geometry>
    </collision>
  </link>
  <link name="middle_wall">
    <visual>
      <geometry>
        <box size="0.1 3.1 2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 3.1 2"/>
      </geometry>
    </collision>
  </link>

    <!-- Obstacle -->
  <link name="obstacle">
    <visual>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
    </collision>
  </link>

  <link name="bunny">
    <visual>
      <geometry>
        <mesh filename="Stanford_Bunny.stl"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="Stanford_Bunny.stl"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_wall_joint" type="fixed">
    <parent link="root_link"/>
    <child link="front_wall"/>
    <origin xyz="0 -3 1" rpy="0 0 0"/>
  </joint>

  <joint name="back_wall_joint" type="fixed">
    <parent link="root_link"/>
    <child link="back_wall"/>
    <origin xyz="0 3 1" rpy="0 0 0"/>
  </joint>

  <joint name="left_wall_joint" type="fixed">
    <parent link="root_link"/>
    <child link="left_wall"/>
    <origin xyz="-3 0 1" rpy="0 0 0"/>
  </joint>

  <joint name="right_wall_joint" type="fixed">
    <parent link="root_link"/>
    <child link="right_wall"/>
    <origin xyz="3 0 1" rpy="0 0 0"/>
  </joint>

  <joint name="middle_wall_joint" type="fixed">
    <parent link="root_link"/>
    <child link="middle_wall"/>
    <origin xyz="0.5 -1.5 1" rpy="0 0 0"/>
  </joint>

  <joint name="obstacle_joint" type="fixed">
    <parent link="root_link"/>
    <child link="obstacle"/>
    <origin xyz="1.7 1.7 1" rpy="0 0 45"/>
  </joint>

   <joint name="bunny_joint" type="fixed">
    <parent link="root_link"/>
    <child link="bunny"/>
    <origin xyz="-1.2 1.2 0" rpy="0 0 45"/>
  </joint>
</robot>
